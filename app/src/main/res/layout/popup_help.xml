<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvQuestionNameHelpPopup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginStart="84dp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:text="The Boy is Eating"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="center">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAudioHelpPopup"
        style="@style/QuestionButtonStyle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        app:backgroundTint="@null"
        app:icon="@drawable/ic_question_audio"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="50dp" />
    <com.google.android.material.button.MaterialButton
        style="@style/QuestionButtonStyle"
        android:id="@+id/btnAudioSlowHelpPopup"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:backgroundTint="@null"
        app:icon="@drawable/ic_question_speaker_slow"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="50dp" />
</LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>