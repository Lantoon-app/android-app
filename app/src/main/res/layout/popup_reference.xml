<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#00FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_40sdp"
        android:background="@drawable/border_bg_reference"
        android:gravity="center">

        <ImageButton
            android:id="@+id/imgBtnClose"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="top|end"
            android:layout_margin="@dimen/_25sdp"
            android:background="@drawable/close_icon"
            android:gravity="top" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvQuestionNameHelpPopup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_20sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_20ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAudioHelpPopup"
                    style="@style/QuestionButtonStyle"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    app:backgroundTint="@null"
                    app:icon="@drawable/ic_question_audio"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="@dimen/_40sdp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAudioSlowHelpPopup"
                    style="@style/QuestionButtonStyle"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    app:backgroundTint="@null"
                    app:icon="@drawable/ic_question_speaker_slow"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="@dimen/_40sdp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llQtypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvQuestionNameHelpPopup2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_20sdp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_20ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAudioHelpPopup2"
                    style="@style/QuestionButtonStyle"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:gravity="center"
                    app:backgroundTint="@null"
                    app:icon="@drawable/ic_question_audio"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="@dimen/_40sdp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAudioSlowHelpPopup2"
                    style="@style/QuestionButtonStyle"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    app:backgroundTint="@null"
                    app:icon="@drawable/ic_question_speaker_slow"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="@dimen/_40sdp" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
