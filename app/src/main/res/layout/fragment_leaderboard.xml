<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ProgressBar
        android:id="@+id/pbLeader"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/rlFull"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
<!--
        <include
            android:id="@+id/header"
            layout="@layout/item_leader_header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />-->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvLeader"
            android:layout_width="match_parent"
            android:layout_height="665dp"
            android:layout_above="@+id/footer"
            android:layout_below="@+id/tablayout_leaderbord"
            android:layout_marginTop="0dp"
            tools:listitem="@layout/item_leader" />

        <include
            android:id="@+id/footer"
            layout="@layout/item_leader_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tablayout_leaderbord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorHeight="@dimen/_5sdp">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_global"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Global" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_insti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Institutional" />

        </com.google.android.material.tabs.TabLayout>
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>