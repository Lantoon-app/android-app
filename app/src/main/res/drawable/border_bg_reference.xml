<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerX="35%"
                android:centerColor="@color/app_gradient_center_colour"
                android:startColor="@color/app_gradient_start_colour"
                android:endColor="@color/app_gradient_end_colour"
                android:type="linear"
                />
            <corners
                android:radius="20dp"
                />
        </shape>

    </item>
    <item android:top="@dimen/_20sdp" android:bottom="@dimen/_20sdp" android:right="@dimen/_20sdp" android:left="@dimen/_20sdp">
        <shape android:shape="rectangle">

            <solid android:color="@color/colorAccent"/>
            <solid android:color="@color/white"/>
        </shape>

    </item>
</layer-list>

