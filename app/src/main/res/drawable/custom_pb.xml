<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape
            android:shape="oval">
            <size android:width="@dimen/_100sdp"
                android:height="@dimen/_100sdp"/>


            <gradient
                android:angle="90"
                android:centerX="35%"
                android:centerColor="@color/app_gradient_center_colour"
                android:startColor="@color/app_gradient_start_colour"
                android:endColor="@color/app_gradient_end_colour"
                android:type="linear"
                />
        </shape>
    </item>
    <item>
        <shape
            android:innerRadius="@dimen/_45sdp"
            android:shape="ring"
            android:thicknessRatio="19.5"
            android:useLevel="false">
            <solid android:color="#DDD" />
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270">
            <shape
                android:innerRadius="@dimen/_45sdp"
                android:shape="ring"
                android:thicknessRatio="19.5"
                android:useLevel="true">
                <gradient
                    android:startColor="#FFCBAC"
                    android:centerColor="#FFA772"
                    android:endColor="#E83124"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>
</layer-list>