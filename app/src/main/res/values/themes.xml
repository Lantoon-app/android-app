<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lantoon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar_color</item>
        <item name="android:navigationBarColor">@color/navigation_bar_color</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="Theme.Lantoon">
        <item name="android:textViewStyle">@style/OpenSandsTextViewStyle</item>
        <item name="android:editTextStyle">@style/AppEditTextStyle</item>
    </style>
    <style name="AppEditTextStyle" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>
    <style name="AppEditTextStyleLight" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_edittext_light</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>
    <style name="AppButtonStyle" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_33sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="OpenSandsTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:isIndicator">true</item>
        <item name="android:progressDrawable">@drawable/custom_pb</item>
    </style>

    <style name="CustomRatingBarStyle" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_chapter_rating</item>
        <item name="android:minHeight">@dimen/_15sdp</item>
        <item name="android:maxHeight">@dimen/_55sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:numStars">5</item>
        <item name="android:max">5</item>
    </style>
    <style name="CustomStarRatingBarStyle" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/chapter_star_rating</item>
        <item name="android:minHeight">@dimen/_15sdp</item>
        <item name="android:maxHeight">@dimen/_55sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:numStars">5</item>
        <item name="android:max">5</item>
    </style>
    <style name="QuestionButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>
    <style name="RankTextView">
        <item name="android:paddingLeft">8px</item>
        <item name="android:paddingBottom">8px</item>
        <item name="android:layout_marginBottom">-5dp</item>
        <item name="android:textColor">#FB0000</item>
        <item name="android:textSize">@dimen/_25ssp</item>
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">10</item>
    </style>

</resources>